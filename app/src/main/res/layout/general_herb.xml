<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seekBarSpeed"
        android:layout_centerHorizontal="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/nameH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="ชื่อสมุนไพร"
                android:textColor="#848484"
                android:textColorHint="#c1c1c1"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/nameOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="ชื่ออื่นๆ"
                android:textColor="#848484"
                android:textColorHint="#c1c1c1"
                android:textSize="26dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/b1" />

            <TextView
                android:id="@+id/nameSee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="ลักษณะการสังเกตุ"
                android:textColor="#b9b8b8"
                android:textColorHint="#c1c1c1"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="ใบ"
                android:textColor="#b9b8b8"
                android:textColorHint="#c1c1c1"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/tree2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="กิ่ง"
                android:textColor="#b9b8b8"
                android:textColorHint="#c1c1c1"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/tree3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="ดอก"
                android:textColor="#b9b8b8"
                android:textColorHint="#c1c1c1"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/tree4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="ผล"
                android:textColor="#b9b8b8"
                android:textColorHint="#c1c1c1"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/tree5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="ราก"
                android:textColor="#b9b8b8"
                android:textColorHint="#c1c1c1"
                android:textSize="22dp" />
            <TextView
                android:id="@+id/tree6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="10dp"
                android:text="เมล็ด"
                android:textColor="#b9b8b8"
                android:textColorHint="#c1c1c1"
                android:textSize="22dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>