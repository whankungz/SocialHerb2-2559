<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <include
            android:id="@+id/toolbar"
            layout="@layout/custom_toolbar_login" />

        <TextView
            android:id="@+id/textI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Infographic"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/seekBarSpeed"
        android:layout_centerHorizontal="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/layoutScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">


                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/nameI"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:textColor="#151515"
                    android:textSize="22dp" />

            <ImageView
                android:layout_marginTop="6dp"
                android:layout_gravity="center"
                android:id="@+id/i_Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/namefI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="ที่มา"
                android:textColor="#848484"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/frI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#151515"
                android:textSize="16dp" />

            <View
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:background="#eaeaea" />


            <RelativeLayout
                android:layout_marginTop="14dp"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    app:srcCompat="@drawable/ic_green"
                    android:id="@+id/peop"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                <TextView
                    android:layout_marginLeft="240dp"
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:textColor="#d6d6d6"
                    android:text="30/01/60"
                    android:textSize="14dp" />
                <TextView
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="80dp"
                    android:id="@+id/nameMe2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:textColor="#5e5e5e"
                    android:text="เป็นเนื้อหาที่ดี"
                    android:textSize="16dp" />

            </RelativeLayout>
            <TextView
                android:id="@+id/Uname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:textColor="#c4c4c4"
                android:text="green"
                android:textSize="18dp" />
            <View
                android:layout_marginTop="14dp"
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:background="#eaeaea" />
            <RatingBar
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:layout_gravity="center"
                android:layout_width="240dp"
                android:layout_height="40dp" />
            <View
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="0.8dp"
                android:background="#eaeaea" />


            <TextView
                android:id="@+id/submitI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/login_bg"
                android:onClick="ClickStart"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="ตกลง"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/null2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#ffffff"
                android:textSize="50dp" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>